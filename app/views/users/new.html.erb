<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Cadastrar</h3>
                </div>
                <div class="panel-body">
                  <%= form_for @user do |f| %>
                    <fieldset>

                        <div class="form-group">
                          <label for="first_name">Nome</label>
                          <%= f.text_field :first_name, id: 'first_name', class: 'form-control' %>
                        </div>

                        <div class="form-group">
                          <label for="last_name">Sobrenome</label>
                          <%= f.text_field :last_name, id: 'last_name', class: 'form-control' %>
                        </div>

                        <div class="form-group">
                          <label for="email">Email</label>
                          <%= f.email_field :email, id: 'email', class: 'form-control' %>
                        </div>

                        <div class="form-group">
                          <label for="password">Senha</label>
                          <%= f.password_field :password, id: 'password', class: 'form-control' %>
                        </div>

                        <div class="form-group">
                          <label for="password_confirmation">Confirme a Senha</label>
                          <%= f.password_field :password_confirmation, id: 'password_confirmation', class: 'form-control' %>
                        </div>

                        <%= form_for @location do |l| %>
                          <div class="form-group">
                            <label for="first_name">Endere√ßo</label>
                            <%= l.text_field :address, id: 'address', class: 'form-control' %>
                          </div>
                        <% end %>

                        <!-- Change this to a button or input when using this as a form -->
                        <%= f.submit "Cadastrar", class: "btn btn-primary" %>
                    </fieldset>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
