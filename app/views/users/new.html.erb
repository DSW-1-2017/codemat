<div class="row">
	<div class="col-6 offset-md-3">
		<h3>Criar uma conta</h3>
	</div>
</div>

<%= form_for @user do |f| %>

	<div class="row">
		<div class="col-6 offset-md-3">
			<div class="row">
		<div class="col-6">
			<div class="form-group">
				<label for="first_name">Nome</label>
				<%= f.text_field :first_name, id: 'first_name', class: 'form-control' %>
			</div>
		</div>
		<div class="col-6">
			<div class="form-group">
				<label for="last_name">Sobrenome</label>
				<%= f.text_field :last_name, id: 'last_name', class: 'form-control' %>
			</div>
		</div>
	</div>



	<div class="form-group">
		<label for="email">Email</label>
		<%= f.email_field :email, id: 'email', class: 'form-control' %>
	</div>

	<div class="row">
		<div class="col-6">
			<div class="form-group">
				<label for="password">Senha</label>
				<%= f.password_field :password, id: 'password', class: 'form-control' %>
			</div>
		</div>

		<div class="col-6">
			<div class="form-group">
				<label for="password_confirmation">Confirme a Senha</label>
				<%= f.password_field :password_confirmation, id: 'password_confirmation', class: 'form-control' %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-6">
			<%= f.submit "Submit", class: "btn btn-primary" %>
		</div>
	</div>

		</div>
	</div>




  

<% end %>
